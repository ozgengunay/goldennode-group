<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="file" fileName="logs/ev-cloud.log" append="true">
      <PatternLayout pattern="%d{ISO8601} %-5p (%t) [%c(%M:%L)] %m%n"/>
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5p (%t) [%c(%M:%L)] %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="com.ozgen" level="debug" additivity="false">
      <AppenderRef ref="file"/>
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Root level="debug">
      <AppenderRef ref="file"/>
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
