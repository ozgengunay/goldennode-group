{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Thingabled Stack",
	"Parameters": {
		"topicEmailAddress": {
			"Description": "topicEmailAddress",
			"Type": "String",
			"Default": "admin@thingabled.com"
		},
		"dbInstanceClass": {
			"Description": "dbInstanceClass",
			"Type": "String",
			"Default": "db.t2.micro"
		},
		"bastionInstanceType": {
			"Description": "bastionInstanceType",
			"Type": "String",
			"Default": "t2.micro"
		},
		"instanceType": {
			"Description": "instanceType",
			"Type": "String",
			"Default": "t2.micro"
		},
		"s3Base": {
			"Description": "s3 base for cf",
			"Type": "String",
			"Default": "https://s3.eu-west-2.amazonaws.com/thingabled-cf"
		},
		"s3Bucket": {
			"Description": "s3 bucket name for other resources",
			"Type": "String",
			"Default": "thingabled-scripts"
		},
		"rdsUser": {
			"Description": "RDS username",
			"Type": "String",
			"Default": "thingabled"
		},
		"rdsPassword": {
			"Description": "RDS password",
			"Type": "String",
			"Default": "thingabled"
		},
		"tomcatVersion": {
			"Description": "tomcatVersion",
			"Type": "String",
			"Default": "9.0.0.M21"
		},
		"artifactVersion": {
			"Description": "artifactVersion",
			"Type": "String",
			"Default": "0.0.1-SNAPSHOT"
		},
		"openJDKVersion": {
			"Description": "openJDKVersion",
			"Type": "String",
			"Default": "1.8.0"
		}
	},
	"Mappings": {
		"RegionMap": {
			"us-east-1": {
				"AMI": "ami-c58c1dd3",
				"Name": "US East (N. Virginia)",
				"Continent": "NA"
			},
			"us-east-2": {
				"AMI": "ami-4191b524",
				"Name": "US East (Ohio)",
				"Continent": "NA"
			},
			"us-west-1": {
				"AMI": "ami-7a85a01a",
				"Name": "US West (N. California)",
				"Continent": "NA"
			},
			"us-west-2": {
				"AMI": "ami-4836a428",
				"Name": "US West (Oregon)",
				"Continent": "NA"
			},
			"ca-central-1": {
				"AMI": "ami-0bd66a6f",
				"Name": "Canada (Central)",
				"Continent": "NA"
			},
			"eu-west-1": {
				"AMI": "ami-01ccc867",
				"Name": "EU (Ireland)",
				"Continent": "EU"
			},
			"eu-central-1": {
				"AMI": "ami-b968bad6",
				"Name": "EU (Frankfurt)",
				"Continent": "EU"
			},
			"eu-west-2": {
				"AMI": "ami-b6daced2",
				"Name": "EU (London)",
				"Continent": "EU"
			},
			"ap-northeast-1": {
				"AMI": "ami-923d12f5",
				"Name": "Asia Pacific (Tokyo)",
				"Continent": "AS"
			},
			"ap-northeast-2": {
				"AMI": "ami-9d15c7f3",
				"Name": "Asia Pacific (Seoul)",
				"Continent": "AS"
			},
			"ap-southeast-1": {
				"AMI": "ami-fc5ae39f",
				"Name": "Asia Pacific (Singapore)",
				"Continent": "AS"
			},
			"ap-southeast-2": {
				"AMI": "ami-162c2575",
				"Name": "Asia Pacific (Sydney)",
				"Continent": "OC"
			},
			"ap-south-1": {
				"AMI": "ami-52c7b43d",
				"Name": "Asia Pacific (Mumbai)",
				"Continent": "AS"
			},
			"sa-east-1": {
				"AMI": "ami-37cfad5b",
				"Name": "South America (SÃ£o Paulo)",
				"Continent": "SA"
			}
		}
	},
	"Resources": {
		"stackThingabledCore": {
			"Type": "AWS::CloudFormation::Stack",
			"Properties": {
				"TemplateURL": {
					"Fn::Join": [
						"/",
						[
							{
								"Ref": "s3Base"
							},
							"thingabled-stack-core.json"
						]
					]
				},
				"TimeoutInMinutes": "30",
				"Parameters": {
					"ami": {
						"Fn::FindInMap": [
							"RegionMap",
							{
								"Ref": "AWS::Region"
							},
							"AMI"
						]
					},
					"bastionInstanceType": {
						"Ref": "bastionInstanceType"
					}
				}
			}
		},
		"stackThingabledRDS": {
			"Type": "AWS::CloudFormation::Stack",
			"Properties": {
				"TemplateURL": {
					"Fn::Join": [
						"/",
						[
							{
								"Ref": "s3Base"
							},
							"thingabled-stack-rds.json"
						]
					]
				},
				"TimeoutInMinutes": "30",
				"Parameters": {
					"privateSubnet1": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.privateSubnet1"
						]
					},
					"privateSubnet2": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.privateSubnet2"
						]
					},
					"securityGroupRDS": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.securityGroupRDS"
						]
					},
					"dbInstanceClass": {
						"Ref": "dbInstanceClass"
					}
				}
			},
			"DependsOn": [
				"stackThingabledCore"
			]
		},
		"stackThingabledAsg": {
			"Type": "AWS::CloudFormation::Stack",
			"Properties": {
				"TemplateURL": {
					"Fn::Join": [
						"/",
						[
							{
								"Ref": "s3Base"
							},
							"thingabled-stack-asg.json"
						]
					]
				},
				"TimeoutInMinutes": "30",
				"Parameters": {
					"ami": {
						"Fn::FindInMap": [
							"RegionMap",
							{
								"Ref": "AWS::Region"
							},
							"AMI"
						]
					},
					"continent": {
						"Fn::FindInMap": [
							"RegionMap",
							{
								"Ref": "AWS::Region"
							},
							"Continent"
						]
					},
					"topicEmailAddress": {
						"Ref": "topicEmailAddress"
					},
					"instanceType": {
						"Ref": "instanceType"
					},
					"publicSubnet1": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.publicSubnet1"
						]
					},
					"publicSubnet2": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.publicSubnet2"
						]
					},
					"privateSubnet1": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.privateSubnet1"
						]
					},
					"privateSubnet2": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.privateSubnet2"
						]
					},
					"securityGroupPublic": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.securityGroupPublic"
						]
					},
					"securityGroupPrivate": {
						"Fn::GetAtt": [
							"stackThingabledCore",
							"Outputs.securityGroupPrivate"
						]
					},
					"rdsUser": {
						"Ref": "rdsUser"
					},
					"rdsPassword": {
						"Ref": "rdsPassword"
					},
					"rdsAddress": {
						"Fn::GetAtt": [
							"stackThingabledRDS",
							"Outputs.rdsAddress"
						]
					},
					"tomcatVersion": {
						"Ref": "tomcatVersion"
					},
					"artifactVersion": {
						"Ref": "artifactVersion"
					},
					"openJDKVersion": {
						"Ref": "openJDKVersion"
					},
					"s3Bucket": {
						"Ref": "s3Bucket"
					}
				}
			},
			"DependsOn": [
				"stackThingabledRDS"
			]
		}
	},
	"Outputs": {
		"loadBalancerURL": {
			"Description": "Loadbalancer URL",
			"Value": {
				"Fn::GetAtt": [
					"stackThingabledAsg",
					"Outputs.loadBalancerURL"
				]
			}
		},
		"loadBalancerDNSName": {
			"Value": {
				"Fn::GetAtt": [
					"stackThingabledAsg",
					"Outputs.loadBalancerDNSName"
				]
			}
		},
		"bastionIP": {
			"Value": {
				"Fn::GetAtt": [
					"stackThingabledCore",
					"Outputs.bastionIP"
				]
			}
		},
		"vpcId": {
			"Value": {
				"Fn::GetAtt": [
					"stackThingabledCore",
					"Outputs.vpcId"
				]
			}
		},
		"region": {
			"Description": "AWS region this stack is in.",
			"Value": {
				"Ref": "AWS::Region"
			}
		},
		"rdsAddress": {
			"Value": {
				"Fn::GetAtt": [
					"stackThingabledRDS",
					"Outputs.rdsAddress"
				]
			}
		}
	}
}
